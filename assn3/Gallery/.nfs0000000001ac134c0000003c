#!/bin/bash
# Script that runs test programs and saves results to a file

lanes[0]=1000000
lanes[1]=500000
lanes[2]=250000
lanes[3]=100000
lanes[4]=75000
lanes[5]=50000
lanes[6]=25000
lanes[7]=10000
lanes[8]=7500
lanes[9]=5000
lanes[10]=2500
lanes[11]=1000
lanes[12]=750
lanes[13]=500
lanes[14]=250
lanes[15]=100
lanes[16]=76
lanes[17]=50
lanes[18]=26
lanes[19]=10

redRate=0
blueRate=0
trials=6
executable="Shooter"

echo "TEST $executable: $lanes LANES, $redRate REDRATE, $blueRate BLUERATE" >> $executable+Results.txt 

c=0
while [ $c -le 19 ]
do
    i=0
    while [ $i -le $trials ]
    do
        echo " " >> $executable+Results.txt
        echo "NUMBER LANES: ${lanes[$c]}" >> $executable+Results.txt
        ./$executable -l ${lanes[$c]} -r $redRate -b $blueRate -p>> $executable+Results.txt
        (( i++ ))
    done
    (( c++ ))
done
